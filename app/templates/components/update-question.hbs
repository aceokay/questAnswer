{{yield}}
{{#if updateQuestionForm}}
  <h4>Update {{question.name}}'s Question</h4>
  <div class='container'>
    <form>
      <div class="form-group">
        <label for="name">Name</label>
        {{input value=name id="name" class="form-control" placeholder=question.name}}
      </div>
      <div class="form-group">
        <label for="title">Question</label>
        {{input value=title id="title" class="form-control" placeholder=question.title}}
      </div>

      <div class="form-group">
        <label for="body">Notes</label>
        {{input value=body id="body" class="form-control" placeholder=question.body}}
      </div>

      <button class="btn" {{action 'update' question}}>Save</button>
    </form>
  </div>
{{else}}
  <button class="btn" {{action 'updateQuestionForm'}}>Edit</button>
{{/if}}
