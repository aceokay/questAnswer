{{yield}}
<div class="container">
  {{#if addNewQuestion}}
      <h1>Add New Question</h1>
      <div class="container">
        <form>
          <div class="form-group">
            <label for="name">Your Name</label>
            {{input value=name id="name" class="form-control"}}
          </div>
          <div class="form-group">
            <label for="title">Question</label>
            {{input value=title id="title" class="form-control"}}
          </div>
          <div class="form-group">
            <label for="body">Question Details</label>
            {{input value=body id="body" class="form-control"}}
          </div>
          <button class="btn" {{action 'save'}}>Save</button>
        </form>
      </div>
  {{else}}
      <button class="btn" {{action 'questionFormShow'}}>New Question</button>
  {{/if}}
</div>
